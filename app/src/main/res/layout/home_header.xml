<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="50dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <ImageButton
        android:background="@drawable/light_up_world"
        android:id="@+id/but_A"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/but_B"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/but_B"
        android:scaleType="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/self_listing"
        app:layout_constraintEnd_toStartOf="@id/but_C"
        app:layout_constraintStart_toEndOf="@id/but_A"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/but_C"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/a_wtt"
        app:layout_constraintEnd_toStartOf="@id/but_D"
        app:layout_constraintStart_toEndOf="@id/but_B"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:background="@drawable/mining_pool"
        android:id="@+id/but_D"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/but_C"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
