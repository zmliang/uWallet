<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/corner_wallet_card_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_wallet_name"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包名" />

        <TextView
            android:textSize="13sp"
            android:id="@+id/card_wallet_address"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****************" />

        <TextView
            android:text="查看详情"
            android:textSize="12sp"
            android:paddingVertical="6dp"
            android:layout_marginRight="15dp"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorGray"
            android:layout_alignParentRight="true"
            android:id="@+id/card_wallet_item_detail"
            android:layout_width="wrap_content"
            android:background="@drawable/biankuang_1"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/wallet_selected_iv"
            android:background="@drawable/wallet_selected"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    </RelativeLayout>



</FrameLayout>